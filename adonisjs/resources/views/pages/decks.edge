<body class="min-h-screen w-screen font-sans">
    @component('components/layout', { title: 'Accueil' })
    <h3>
        Mes Decks
    </h3>
    <form action="#" method="post">
        <table>
            <thead>
                <tr>
                    <th>
                        Nom
                    </th>
                    <th>
                        Description
                    </th>
                    <th>
                        Options
                    </th>
                </tr>
            </thead>
            <tbody>
                @each ((deck, index) in decks)
                <tr>
                    <td>
                        {{deck.title}}
                    </td>
                    <td>
                        {{deck.description}}
                    </td>
                    <td class="containerOptions">
                        <a href="#">
                            <img height="20em" src="/adonisjs/resources/img/edit.png" alt="edit" />
                        </a>
                        <a href="javascript:confirmDelete()">
                            <img height="20em" src="/adonisjs/resources/img/delete.png" alt="delete" />
                        </a>
                        <a href="detailTeacher.html">
                            <img height="20em" src="../../img/detail.png" alt="detail" />
                        </a>
                    </td>
                </tr>
                @end
            </tbody>
        </table>
    </form>


    @endcomponent

